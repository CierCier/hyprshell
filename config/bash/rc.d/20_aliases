case $- in
  *i*) ;;
  *) return ;;
esac

command -v lsd >/dev/null 2>&1 && alias ls='lsd -l --group-directories-first -h'
command -v bat >/dev/null 2>&1 && alias cat='bat --plain --paging=never'
command -v rg >/dev/null 2>&1 && alias grep='rg --color=auto'

if command -v nvim > /dev/null; then
	alias vi=nvim
	alias vim=nvim
fi


